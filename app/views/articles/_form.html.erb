<div class="container">

    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "share/errors", obj: @article %>
            <%= form_with model: @article, class:"shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
                    </div>
                </div>


                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Write something..." %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :category, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
                            <%= b.label %>
                            <%= b.check_box class: "form-check-input" %>
                        <% end %>
                    </div>
                </div>

                    
                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>

            <%= link_to "[ Cancel and Return to List ]", articles_path %>
        </div>
    </div>
</div>

