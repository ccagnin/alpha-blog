<div class="container">
    <h1 class="text-center mt-4">Article Details</h1>
    <div class="row justify-content-center">
        <div class="col-10">

            <div class="list-group">
                <div class="list-group-item list-group-item-action" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1"><%= @article.title %></h5>
                        <small>3 days ago</small>
                    </div>
                    <p class="mb-1"><%= @article.description %></p>
                    <% if @article.categories.any? %>
                        <div class="mt-2 mb-2">
                            <%= render @article.categories %></br>
                        </div>
                    <% end %>
                    <small>By <%= @article.user.username %></small>

                    <div>
                        <%= link_to "Edit", edit_article_path(@article)%> |
                        <% if logged_in? && (@article.user == current_user || current_user.admin?) %> 
                            <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Confirm?" } %> |
                            <%= link_to "Return to List", articles_path %>
                        <% end %>
                    </div>
                </>
            </div>
        </div>
    </div>
</div>