<h1 class="text-center mt-4">Create a new category</h1>

<div class="container">

    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "share/errors", obj: @category %>
            <%= form_with model: @category, class:"shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
                <div class="form-group row">
                    <%= f.label :name, "Category name:", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                    </div>
                </div>

                    
                <div class="form-group row justify-content-center">
                    <%= f.submit "Create", class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>

            <%= link_to "[ Cancel and Return to List ]", articles_path %>
        </div>
    </div>
</div>
